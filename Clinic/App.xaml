<Application x:Class="Clinic.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Clinic.ViewModels.Doctor"
             xmlns:view="clr-namespace:Clinic.View.Doctor"
             StartupUri="View/Login.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Languages/Resources.uk.xaml" />
                <ResourceDictionary Source="Languages/Resources.en.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type vm:DoctorAppointmentsViewModel}">
                <view:DoctorAppointmentsView />
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
