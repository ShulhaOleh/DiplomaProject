<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Login -->
    <sys:String x:Key="UsernameLabel">Username</sys:String>
    <sys:String x:Key="PasswordLabel">Password</sys:String>
    <sys:String x:Key="LoginButton">Login</sys:String>
    <sys:String x:Key="LangLabel">Language</sys:String>
    <sys:String x:Key="NoRoleMessage">User found, but no data to display.</sys:String>
    <sys:String x:Key="IncorrectPasswordOrLoginMessage">Incorrect login or password.</sys:String>
    <sys:String x:Key="EmptyLoginFieldsMessage">Please fill in your login and password.</sys:String>
    <sys:String x:Key="Unknown">Unknown</sys:String>
    <sys:String x:Key="Unknown_Role">Unknown role</sys:String>
    <sys:String x:Key="Remember_Me">Remember me</sys:String>

    <!-- ProfileView -->
    <sys:String x:Key="FullNameLabel">Full name:</sys:String>
    <sys:String x:Key="DateOfBirthLabel">Date of birth:</sys:String>
    <sys:String x:Key="PhoneLabel">Phone:</sys:String>
    <sys:String x:Key="InterfaceLanguageLabel">Interface language:</sys:String>

    <!-- DoctorAppointmentsView -->
    <sys:String x:Key="Tab_Today">Today</sys:String>
    <sys:String x:Key="Tab_Upcoming">Upcoming</sys:String>
    <sys:String x:Key="Tab_Past">Past</sys:String>

    <sys:String x:Key="Column_Patient">Patient</sys:String>
    <sys:String x:Key="Column_Time">Time</sys:String>
    <sys:String x:Key="Column_Status">Status</sys:String>
    <sys:String x:Key="Column_Notes">Notes</sys:String>

    <sys:String x:Key="Status_Expected">Pending</sys:String>
    <sys:String x:Key="Status_NoShow">No-show</sys:String>
    <sys:String x:Key="Status_Completed">Completed</sys:String>

    <sys:String x:Key="Msg_CompletedSuccess">Appointment completed successfully!</sys:String>
    <sys:String x:Key="Msg_NoShowSuccess">Patient marked as no-show.</sys:String>
    <sys:String x:Key="Msg_StatusUpdated">Status updated.</sys:String>
    <sys:String x:Key="Title_Done">Done</sys:String>

    <!-- AppointmentManagementView -->
    <sys:String x:Key="AppointmentManagement_Header">Appointments for Today</sys:String>
    <sys:String x:Key="Column_Date">Date</sys:String>
    <sys:String x:Key="Btn_MarkNoShow">Mark as No-Show</sys:String>
    <sys:String x:Key="Msg_AlreadyHandled">This appointment is already completed or marked as no-show.</sys:String>
    
    <sys:String x:Key="Sys_Admin">System admin</sys:String>

</ResourceDictionary>
