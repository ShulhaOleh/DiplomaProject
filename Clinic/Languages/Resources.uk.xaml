<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Login -->
    <sys:String x:Key="UsernameLabel">Логін</sys:String>
    <sys:String x:Key="PasswordLabel">Пароль</sys:String>
    <sys:String x:Key="LoginButton">Увійти</sys:String>
    <sys:String x:Key="LangLabel">Мова</sys:String>
    <sys:String x:Key="NoRoleMessage">Користувача знайдено, але дані для відображення відсутні.</sys:String>
    <sys:String x:Key="IncorrectPasswordOrLoginMessage">Невірний логін або пароль.</sys:String>
    <sys:String x:Key="EmptyLoginFieldsMessage">Будь ласка, заповніть логін та пароль.</sys:String>

    <!-- ProfileView -->
    <sys:String x:Key="FullNameLabel">ПІБ:</sys:String>
    <sys:String x:Key="DateOfBirthLabel">Дата народження:</sys:String>
    <sys:String x:Key="PhoneLabel">Телефон:</sys:String>
    <sys:String x:Key="InterfaceLanguageLabel">Мова інтерфейсу:</sys:String>

    <!-- DoctorAppointmentsView -->
    <sys:String x:Key="Tab_Today">Сьогодні</sys:String>
    <sys:String x:Key="Tab_Upcoming">Майбутні</sys:String>
    <sys:String x:Key="Tab_Past">Минулі</sys:String>

    <sys:String x:Key="Column_Patient">Пацієнт</sys:String>
    <sys:String x:Key="Column_Time">Час</sys:String>
    <sys:String x:Key="Column_Status">Статус</sys:String>
    <sys:String x:Key="Column_Notes">Опис</sys:String>

    <sys:String x:Key="Status_Expected">Очікується</sys:String>
    <sys:String x:Key="Status_NoShow">Пацієнт не з’явився</sys:String>
    <sys:String x:Key="Status_Completed">Прийом завершено</sys:String>

    <sys:String x:Key="Msg_CompletedSuccess">Прийом успішно завершено!</sys:String>
    <sys:String x:Key="Msg_NoShowSuccess">Пацієнта позначено як «не з’явився».</sys:String>
    <sys:String x:Key="Msg_StatusUpdated">Статус оновлено.</sys:String>
    <sys:String x:Key="Title_Done">Готово</sys:String>

    <!-- AppointmentManagementView -->
    <sys:String x:Key="AppointmentManagement_Header">Прийоми на сьогодні</sys:String>
    <sys:String x:Key="Column_Date">Дата</sys:String>
    <sys:String x:Key="Btn_MarkNoShow">Позначити як не з’явився</sys:String>
    <sys:String x:Key="Msg_AlreadyHandled">Цей прийом уже завершено або позначено як 'не з’явився'.</sys:String>

</ResourceDictionary>
