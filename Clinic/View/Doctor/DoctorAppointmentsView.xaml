<UserControl x:Class="Clinic.View.Doctor.DoctorAppointmentsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <Style TargetType="DataGridRow">
            <Style.Triggers>
                <!-- Highlight gray if completed -->
                <DataTrigger Binding="{Binding Status}" Value="Прийом завершено">
                    <Setter Property="Background" Value="LightGray" />
                </DataTrigger>
                <!-- Highlight yellow if this is the earliest future appointment today -->
                <DataTrigger Binding="{Binding IsNearestToday}" Value="True">
                    <Setter Property="Background" Value="#FDEEA9" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <TabControl>
            <TabItem Header="Сьогодні">
                <DataGrid ItemsSource="{Binding TodayAppointments}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserSortColumns="False"
                          SelectionMode="Single">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Пацієнт" Binding="{Binding PatientName}" Width="2*" />
                        <DataGridTextColumn Header="Дата" Binding="{Binding AppointmentDate, StringFormat='dd.MM.yyyy HH:mm'}" Width="2*" />
                        <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="1.5*" />
                        <DataGridTextColumn Header="Опис" Binding="{Binding Notes}" Width="3*" />
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <TabItem Header="Майбутні">
                <DataGrid ItemsSource="{Binding UpcomingAppointments}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserSortColumns="False"
                          SelectionMode="Single">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Пацієнт" Binding="{Binding PatientName}" Width="2*" />
                        <DataGridTextColumn Header="Дата" Binding="{Binding AppointmentDate, StringFormat='dd.MM.yyyy HH:mm'}" Width="2*" />
                        <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="1.5*" />
                        <DataGridTextColumn Header="Опис" Binding="{Binding Notes}" Width="3*" />
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <TabItem Header="Минулі">
                <DataGrid ItemsSource="{Binding PastAppointments}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserSortColumns="False"
                          SelectionMode="Single">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Пацієнт" Binding="{Binding PatientName}" Width="2*" />
                        <DataGridTextColumn Header="Дата" Binding="{Binding AppointmentDate, StringFormat='dd.MM.yyyy HH:mm'}" Width="2*" />
                        <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="1.5*" />
                        <DataGridTextColumn Header="Опис" Binding="{Binding Notes}" Width="3*" />
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
