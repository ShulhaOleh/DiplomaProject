<Window x:Class="Clinic.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Головна сторінка" WindowState="Maximized" ResizeMode="CanResize">
    <Grid>
        <DockPanel>
            <Border Background="#2d2d30" Height="50" DockPanel.Dock="Top">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10,0">
                    <TextBlock Text="&#9776;" FontSize="24" Foreground="White" Margin="0,10,10,0" />
                    <TextBlock x:Name="UserNameLabel" Text="Користувач" Foreground="White" VerticalAlignment="Center" FontSize="16"/>
                </StackPanel>
            </Border>

            <Grid>
                <TextBlock x:Name="MainContent" Text="Вітаємо!" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" />
            </Grid>
        </DockPanel>
    </Grid>
</Window>